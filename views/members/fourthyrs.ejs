<%- include("../partials/header.ejs") %>
<main>
    <div style="margin-top: 100px; text-align: center;">
        <h1 style="font-size: 4rem; font-weight: bold; margin-bottom: 50px;">Fourth Years</h1>
    </div>
    <% if(fourthyrs.length > 0) { %>
    <div class="container fourthyrs">
        <div class="row">
            <% for(let fourthyr of fourthyrs) { %>
            <div class="col-md-4">
                <div class="card fourthyr">
                    <img src="<%= fourthyr.img %> " class="card-img-top"
                        alt="PIC TEST">
                    <div class="card-body">
                        <h5 class="card-title card_title">Name: <%= fourthyr.name%></h5>
                        <p class="card-text">
                            <span>Year: <%= fourthyr.year %></span><br>
                            <span>Branch: <%= fourthyr.branch %></span><br>
                            <% if (fourthyr.email) { %>
                                <span>Email: <%= fourthyr.email %></span><br>
                            <% } %>
                            <span>Gamer-Tag: <%= fourthyr.tag %></span><br>
                            <% if (fourthyr.placement) { %>
                                <span>Placed in: <%= fourthyr.placement %></span><br>
                            <% } %>
                        </p>
                        <% if (fourthyr.linkedIn) { %>
                            <a href="<%= fourthyr.linkedIn %>"><i class="fab fa-linkedin fa-2x"></i></a>
                        <% } %>
                    </div>
                </div>
            </div>
            <% } %>
            <% }else{ %>
        </div>
    </div>
    <div>
        No events
    </div>
    <% } %>
</main>

<%- include("../partials/footer.ejs") %>