<%- include("../partials/header.ejs") %>
<main>
    <div style="margin-top: 100px; text-align: center;">
        <h1 style="font-size: 4rem; font-weight: bold; margin-bottom: 50px;">First Years</h1>
    </div>
    <% if(firstyrs.length > 0) { %>
    <div class="container firstyrs">
        <div class="row">
        <% for(let firstyr of firstyrs) { %>
            <div class="col-md-4">
                <div class="card firstyr">
                    <img src="<%= firstyr.img %>" class="card-img-top" alt="PIC TEST">
                    <div class="card-body">
                        <h5 class="card-title card_title">Name: <%= firstyr.name %></h5>
                        <p class="card-text">
                            <span>Year: <%= firstyr.year %></span><br>
                            <span>Branch: <%= firstyr.branch %></span><br>
                            <% if (firstyr.email) { %>
                                <span>Email: <%= firstyr.email %></span><br>
                            <% } %>
                            <span>Gamer-Tag: <%= firstyr.tag %></span><br>
                        </p>
                        <% if (firstyr.linkedIn) { %>
                            <a href="<%= firstyr.linkedIn %>"><i class="fab fa-linkedin fa-2x"></i></a>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>
        </div>
        </div>
    <% }else{ %>
    <div>
        No events.
    </div>
    <% } %>
</main>

<%- include("../partials/footer.ejs") %>