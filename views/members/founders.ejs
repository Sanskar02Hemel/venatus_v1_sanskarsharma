<%- include("../partials/header.ejs") %>
<main>
  <h1 style="text-align: center; color: white; margin-top: 100px;" id="found">Founders</h1>

  <% if(founders.length > 0) { %>
  <div class="container founder">
    <div class="row">
      <% for(let founder of founders) { %>
      <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
        <div class="card h-100" id="foundercard">
          <img
            src="<%= founder.img %> "
            class="card-img-top"
            alt="PCI TEST"
          />
          <div class="card-body">
            <h5 class="card-title">Name: <%= founder.name %></h5>
            <p class="card-text">
              <span>Year: <%= founder.year %></span><br />
              <span>Branch: <%= founder.branch %></span><br />
              <span>Placed in: <%= founder.placement %></span><br />
              <span>Gamer-Tag: <%= founder.tag %></span><br />
              <span>Ex-Post: <%= founder.post %></span>
            </p>
            <% if (founder.fb) { %>
              <a href="<%= founder.fb %>" class="btn btn-primary" style="width: 4.7rem;"><i class="fab fa-facebook fa-2x white-text mr-md-5 mr-3"></i></a>
            <% } %>
            <% if (founder.insta) { %>
              <a href="<%= founder.insta%>" class="btn btn-primary" style="width: 4.4rem;"><i class="fab fa-instagram fa-2x white-text mr-md-5 mr-3"></i></a>
            <% } %>
          </div>
        </div>
      </div>

      <% } %>
    </div>
  </div>
  <% }else{ %>
  <div>
    No events
  </div>
  <% } %>
</main>

<%- include("../partials/footer.ejs") %>
